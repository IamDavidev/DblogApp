---
import tags from '~/constants/tags.const';
---

<div class='footer-divider'></div>
<footer class='footer-dblog'>
	<h3 class='footer-dblog__title'>Dblog</h3>
	<div class='footer-dblog__tags'>
		{
			tags.map(tag => {
				return (
					<div class='footer-dblog__tags'>
						<a href={`/posts/${tag}`} class='tag__link'>
							{tag}
						</a>
					</div>
				);
			})
		}
	</div>
</footer>

<style>
	.footer-divider {
		width: 100%;
		height: 1px;
		background-color: var(--gray--color);
		margin: auto auto;
		margin-top: 5rem;
		margin-bottom: 1rem;
	}
	.footer-dblog {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		justify-content: center;
		align-items: center;
	}
	.footer-dblog__title {
		font-size: 96px;
		font-weight: 700;
		color: var(--primary--color);
		margin: 1rem 0;
	}
	.footer-dblog__tags {
		display: flex;
		align-items: center;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		gap: 2rem;
	}
	.tag__link {
		text-decoration: none;
		padding: 0.5rem 1.5rem;
		border-radius: 0.5rem;
		background-color: var(--gray--color);
		color: var(--primary--color);
		/* transition: all 0.5s ease-in-out; */
		transition: all ease-in-out 0.5s;
		border: 3px solid var(--gray--color);
	}
	.tag__link:hover {
		color: var(--primary--color);
		border-color: var(--primary--color);
		background-color: transparent;
		scale: 1.1;
	}
</style>
