{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // "types": [
    //   "astro/'client"
    // ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "~posts/*": [
        "src/"
      ],
      "~layouts": [
        "src/layouts/*"
      ],
      "~pages": [
        "src/pages/*"
      ],
      "~components": [
        "src/components/*"
      ]
    }
  }
}