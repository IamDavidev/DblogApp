---
import { PostList } from './components/postLis';

const posts = await Astro.glob('../../pages/posts/*.{md,mdx}');
---

<section>
	<!-- <h2>All Posts</h2> -->
	<div class=''>render filters</div>
	<>
		{
			posts.map(post => {
				const data = post.frontmatter;
				return (
					<PostList
						client:visible
						imageProfile=''
						url={post.url}
						title={data.title}
						description={data.description}
						image={data.image}
						userName={data.userName}
						updatedPost={data.update}
					/>
				);
			})
		}
	</>
</section>
