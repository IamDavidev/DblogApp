---
import { PostList } from '@components/postLis';

const posts = await Astro.glob('../../pages/post/*.{md,mdx}');
---

<section>
	<h2 class='container-all-posts__title'>Posts</h2>
	<div>
		{
			posts.map(post => {
				const data = post.frontmatter;
				return (
					<PostList
						tags={data.tags}
						client:visible
						imageProfile=''
						url={post.url}
						title={data.title}
						description={data.description}
						image={data.image}
						userName={data.userName}
						updatedPost={data.update}
					/>
				);
			})
		}
	</div>
</section>

<style>
	.container-all-posts__title {
		display: flex;
		font-family: 'Raleway-bold';
		font-weight: bold;
		font-size: 96px;
		color: var(--primary--color);
		margin: 5rem 0;
	}
</style>
