---
import type { Langs } from '~/interfaces/langs.enum';
import BaseHead from './BaseHead.astro';
import Footer from './Footer.astro';
import Navbar from './Navbar.astro';
import { Snow } from './snow';

interface Props {
	title: string;
	description: string;
	lang: Langs;
}

const { description, title, lang } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.container-blog {
				position: relative;
				z-index: 3;
			}
		</style>
	</head>
	<body>
		<Snow client:visible />
		<div class='container-blog'>
			<Navbar />
			<slot />
			<Footer />
		</div>
	</body>
</html>
